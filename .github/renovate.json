{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>Boshen/renovate"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/examples/**",
    "**/crates/rolldown/tests/**"
  ],
  "packageRules": [
    {
      "groupName": "napi-rs",
      "matchPackagePrefixes": ["napi"],
      "schedule": ["at any time"]
    },
    {
      "groupName": "oxlint",
      "matchManagers": ["npm"],
      "matchPackageNames": ["oxlint"],
      "schedule": ["at any time"]
    },
    {
      "groupName": "oxc",
      "matchManagers": ["cargo"],
      "matchPackagePrefixes": ["oxc"],
      "enabled": false
    }
  ]
}
