{
  "configurations": [
    {
      "name": "debug-js-basic",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "continueOnAttach": true,
      "type": "node",
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "lldb",
      "request": "attach",
      "sourceLanguages": ["rust"],
      "pid": "${command:pickMyProcess}",
      "name": "debug-rust-attach"
    },
    {
      "type": "lldb",
      "request": "launch",
      "sourceLanguages": ["rust"],
      "name": "debug-rust-basic",
      "program": "node",
      "args": [
        "--inspect-brk",
        "${workspaceFolder}/packages/rolldown/bin/cli",
        "--config",
        "./rolldown.config.js"
      ],
      "console": "internalConsole",
      "internalConsoleOptions": "openOnSessionStart",
      "cwd": "${workspaceFolder}/examples/basic-vue",
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "debug-basic",
      "configurations": ["debug-js-basic", "debug-rust-basic"],
      "stopAll": true,
      "presentation": {
        "group": "examples",
        "order": 1
      }
    }
  ]
}
