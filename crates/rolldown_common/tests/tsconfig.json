{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "../src/*": ["../src/*"]
    }
  },
  "include": ["./**/*.ts", "../src/**/*.d.ts"]
}
