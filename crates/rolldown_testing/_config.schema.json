            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/InputItem"
          }
        },
        "intro": {
          "type": [
            "string",
            "null"
          ]
        },
        "minify": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "moduleTypes": {
          "description": "Key is the file extension. The extension should start with a `.`. E.g. `\".txt\"`.",
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "$ref": "#/definitions/ModuleType"
          }
        },
        "name": {
          "type": [
            "string",
            "null"
          ]
        },
        "outro": {
          "type": [
            "string",
