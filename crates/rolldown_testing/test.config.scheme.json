{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TestConfig",
  "type": "object",
  "properties": {
    "_comment": {
      "description": "An workaround for writing comments in JSON.",
      "default": "",
      "type": "string"
    },
    "expectError": {
      "description": "If `true`, the fixture are expected to fail to compile/build.",
      "default": false,
      "type": "boolean"
    },
    "expectExecuted": {
      "description": "If `false`, the compiled artifacts won't be executed.",
      "default": true,
      "type": "boolean"
    },
    "input": {
      "$ref": "#/definitions/InputOptions"
    },
    "output": {
      "$ref": "#/definitions/OutputOptions"
    }
  },
  "additionalProperties": false,
  "definitions": {
    "InputItem": {
      "type": "object",
      "required": [
        "import",
        "name"
      ],
      "properties": {
        "import": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "InputOptions": {
      "type": "object",
      "properties": {
        "external": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "string"
          }
        },
        "input": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/definitions/InputItem"
          }
        }
      },
      "additionalProperties": false
    },
    "OutputOptions": {
      "type": "object",
      "properties": {
        "exportMode": {
          "default": "auto",
          "type": "string"
        },
        "format": {
          "default": "esm",
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}