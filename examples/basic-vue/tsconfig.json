{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "skipLibCheck": true,
    "useDefineForClassFields": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [
        "./src/*"
      ],
      "@shared": [
        "./src/lib/index.ts"
      ],
      "@shared/types": [
        "./src/lib/types/index.ts"
      ],
      "@utils/*": [
        "./src/lib/utils/*"
      ]
    }
  },
  "include": [
    "./**/*.ts"
  ]
}
