{
  "extends": "../../tsconfig.json",
  "include": ["./src/**/*"],
  "exclude": ["*.js", "*.mjs", "*.cjs", "dist", "lib"],
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src",
    "outDir": "./dist/types",
    "resolveJsonModule": true,
    "noEmit": false,
    "tsBuildInfoFile": ".tsbuildinfo",
    "emitDeclarationOnly": true
  }
}
