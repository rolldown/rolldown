{
  "extends": "../../tsconfig.json",
  "include": ["./src/**/*"],
  "exclude": ["*.js", "*.mjs", "*.cjs", "dist", "lib"],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/types",
    "resolveJsonModule": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "isolatedDeclarations": true
  }
}
