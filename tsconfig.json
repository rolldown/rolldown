{
  "$schema": "https://json.schemastore.org/tsconfig",
  "$comment": "The config is for pure Js projects, which are executed by Node.js directly.",
  "include": [],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "declaration": true,
    "noEmit": true,
    "isolatedDeclarations": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "references": [
    { "path": "./crates/rolldown/src/runtime" },
    { "path": "./crates/rolldown_plugin_hmr/src/runtime" },
    { "path": "./packages/bench" },
    { "path": "./packages/rolldown" },
    { "path": "./packages/rolldown/tests" },
    { "path": "./packages/rollup-tests" },
    { "path": "./packages/test-dev-server" },
    { "path": "./packages/vite-tests" }
  ]
}
